//- mixins.pug






mixin EmpInfo(arg)

  -
    const isAdmin = arg.isAdmin ? 'Yes' : 'No' 
    const {total, bonus} = arg
  -

  .emp-info
    h1.emp-info__title Учет сотруднико в компании: #{isAdmin}
    h2.emp-info__subtitle Общее количество сотрудников: #{total}
    h2.emp-info__subtitle Премию получат: #{bonus}

